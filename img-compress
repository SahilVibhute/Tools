    <script>
        // DOM Elements
        const fileInput = document.getElementById('fileInput');
        const uploadArea = document.getElementById('uploadArea');
        const compressionSlider = document.getElementById('compressionSlider');
        const compressionValue = document.getElementById('compressionValue');
        const formatOptions = document.querySelectorAll('.format-option');
        const compressBtn = document.getElementById('compressBtn');
        const resetBtn = document.getElementById('resetBtn');
        const loadingSpinner = document.getElementById('loadingSpinner');
        const resultsSection = document.getElementById('resultsSection');
        const originalImage = document.getElementById('originalImage');
        const compressedImage = document.getElementById('compressedImage');
        const originalDimensions = document.getElementById('originalDimensions');
        const compressedDimensions = document.getElementById('compressedDimensions');
        const originalSize = document.getElementById('originalSize');
        const compressedSize = document.getElementById('compressedSize');
        const savingsPercent = document.getElementById('savingsPercent');
        const savingsSize = document.getElementById('savingsSize');
        const downloadBtn = document.getElementById('downloadBtn');
        
        // Variables
        let selectedFile = null;
        let selectedFormat = 'original';
        let compressedImageData = null;
        
        // Event Listeners
        compressionSlider.addEventListener('input', updateCompressionValue);
        formatOptions.forEach(option => option.addEventListener('click', selectFormat));
        compressBtn.addEventListener('click', compressImage);
        resetBtn.addEventListener('click', resetTool);
        downloadBtn.addEventListener('click', downloadImage);
        
        // Drag and Drop events
        uploadArea.addEventListener('dragover', (e) => {
            e.preventDefault();
            uploadArea.classList.add('active');
        });
        
        uploadArea.addEventListener('dragleave', () => {
            uploadArea.classList.remove('active');
        });
        
        uploadArea.addEventListener('drop', (e) => {
            e.preventDefault();
            uploadArea.classList.remove('active');
            
            if (e.dataTransfer.files.length) {
                handleFileSelection(e.dataTransfer.files[0]);
            }
        });
        
        fileInput.addEventListener('change', () => {
            if (fileInput.files.length) {
                handleFileSelection(fileInput.files[0]);
            }
        });
        
        // Functions
        function updateCompressionValue() {
            const value = compressionSlider.value;
            compressionValue.textContent = `${value}%`;
        }
        
        function selectFormat(e) {
            formatOptions.forEach(option => option.classList.remove('active'));
            e.target.classList.add('active');
            selectedFormat = e.target.dataset.format;
        }
        
        function handleFileSelection(file) {
            // Check file type
            const validTypes = ['image/jpeg', 'image/png', 'image/webp'];
            if (!validTypes.includes(file.type)) {
                alert('Please select a valid image file (JPEG, PNG, or WEBP)');
                return;
            }
            
            // Check file size (10MB max)
            if (file.size > 10 * 1024 * 1024) {
                alert('File size exceeds 10MB limit');
                return;
            }
            
            selectedFile = file;
            
            // Display original image
            const reader = new FileReader();
            reader.onload = function(e) {
                originalImage.src = e.target.result;
                
                // Get image dimensions
                const img = new Image();
                img.onload = function() {
                    originalDimensions.textContent = `${this.width}×${this.height}`;
                };
                img.src = e.target.result;
                
                // Display file size
                originalSize.textContent = formatFileSize(file.size);
            };
            reader.readAsDataURL(file);
            
            // Enable compress button
            compressBtn.disabled = false;
        }
        
        function compressImage() {
            if (!selectedFile) return;
            
            // Show loading spinner
            loadingSpinner.style.display = 'block';
            compressBtn.disabled = true;
            
            // Simulate compression (in a real app, you would use actual compression libraries)
            setTimeout(() => {
                // This is a simulation - in a real app, you would use:
                // - canvas.toBlob() for client-side compression
                // or
                // - Send to a server for more advanced compression
                
                const reader = new FileReader();
                reader.onload = function(e) {
                    // In a real implementation, you would compress the image here
                    // For this demo, we'll just use the original image but pretend it's compressed
                    compressedImageData = e.target.result;
                    compressedImage.src = compressedImageData;
                    
                    // Get "compressed" image dimensions (same as original in this demo)
                    const img = new Image();
                    img.onload = function() {
                        compressedDimensions.textContent = `${this.width}×${this.height}`;
                        
                        // Calculate "compressed" size (simulated reduction)
                        const originalSizeBytes = selectedFile.size;
                        const compressionRatio = compressionSlider.value / 100;
                        const compressedSizeBytes = Math.max(originalSizeBytes * (1 - compressionRatio), originalSizeBytes * 0.1); // At least 10% of original
                        
                        compressedSize.textContent = formatFileSize(compressedSizeBytes);
                        
                        // Calculate savings
                        const savings = originalSizeBytes - compressedSizeBytes;
                        const percentSavings = ((savings / originalSizeBytes) * 100).toFixed(1);
                        
                        savingsPercent.textContent = `${percentSavings}%`;
                        savingsSize.textContent = formatFileSize(savings);
                        
                        // Hide spinner and show results
                        loadingSpinner.style.display = 'none';
                        resultsSection.style.display = 'block';
                        
                        // Enable download button
                        downloadBtn.disabled = false;
                    };
                    img.src = compressedImageData;
                };
                reader.readAsDataURL(selectedFile);
            }, 1500); // Simulate processing time
        }
        
        function downloadImage() {
            if (!compressedImageData) return;
            
            const link = document.createElement('a');
            link.href = compressedImageData;
            
            // Determine file extension based on selected format
            let extension = selectedFile.name.split('.').pop().toLowerCase();
            if (selectedFormat !== 'original') {
                extension = selectedFormat;
            }
            
            link.download = `compressed_${selectedFile.name.split('.')[0]}.${extension}`;
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
        }
        
        function resetTool() {
            // Reset file input
            fileInput.value = '';
            selectedFile = null;
            
            // Reset UI
            originalImage.src = '';
            compressedImage.src = '';
            originalDimensions.textContent = '0×0';
            compressedDimensions.textContent = '0×0';
            originalSize.textContent = '0 KB';
            compressedSize.textContent = '0 KB';
            savingsPercent.textContent = '0%';
            savingsSize.textContent = '0 KB';
            
            // Reset controls
            compressionSlider.value = 70;
            compressionValue.textContent = '70%';
            formatOptions.forEach(option => option.classList.remove('active'));
            document.querySelector('.format-option[data-format="original"]').classList.add('active');
            selectedFormat = 'original';
            
            // Hide results and disable buttons
            resultsSection.style.display = 'none';
            compressBtn.disabled = true;
            downloadBtn.disabled = true;
        }
        
        function formatFileSize(bytes) {
            if (bytes === 0) return '0 Bytes';
            
            const k = 1024;
            const sizes = ['Bytes', 'KB', 'MB', 'GB'];
            const i = Math.floor(Math.log(bytes) / Math.log(k));
            
            return parseFloat((bytes / Math.pow(k, i)).toFixed(1)) + ' ' + sizes[i];
        }
        
        // Initialize
        document.getElementById('currentYear').textContent = new Date().getFullYear();
        compressBtn.disabled = true;
        downloadBtn.disabled = true;
    </script>
</body>
</html>
